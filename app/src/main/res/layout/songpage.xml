<?xml version="1.0" encoding="utf-8"?>





<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cardView_ID"
        android:foreground="?android:attr/selectableItemBackground">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID"
        android:id="@+id/textSongPage_ID"
        android:layout_gravity="center_horizontal" />

    </android.support.v7.widget.CardView>

    <ViewSwitcher
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/switcher_Weeks"
        android:layout_gravity="center_horizontal"
        >

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weeks"
        android:id="@+id/textSongPageWeeks"
        android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/edit_Weeks" />
    </ViewSwitcher>

    <ViewSwitcher
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/switcher_Year"
        android:layout_gravity="center_horizontal"
        >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Year"
        android:id="@+id/textSongPageYear"
        android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/edit_Year" />

    </ViewSwitcher>


    <ViewSwitcher
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/switcher_Artist"
        android:layout_gravity="center_horizontal"
        >

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Artist"
        android:id="@+id/textSongPageArtist"
        android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/edit_Artist" />
    </ViewSwitcher>


    <ViewSwitcher
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/switcher_name"
        android:layout_gravity="center_horizontal"
        >

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SongName"
        android:id="@+id/textSongPageName"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/edit_SongPage_Name"
        />
    </ViewSwitcher>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改"
        android:id="@+id/btSongPageEdit"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確認修改"
        android:id="@+id/bt_Edit_Confirm"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刪除"
        android:id="@+id/btSongPageDelete"
        android:layout_gravity="center_horizontal" />


</LinearLayout>