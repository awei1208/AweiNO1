<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editUploadArtist"
        android:hint = "Artist"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editUploadWeek" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editUploadSong"
        android:hint = "Song"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editUploadWeek"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editUploadYear"
        android:hint = "Year"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editUploadSong"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editUploadWeek"
        android:hint = "Week"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editUploadArtist"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/btUpload"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editUploadYear"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageButtonTwo"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_below="@+id/btUpload"
        android:layout_toEndOf="@+id/btUpload" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageButtonOne"
        android:layout_below="@+id/btUpload"
        android:layout_toStartOf="@+id/btUpload"
        android:src="@android:drawable/ic_menu_camera" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Upload"
        android:id="@+id/btImageUpload"
        android:layout_below="@+id/imageButtonOne"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/TextsizeOfBitmapArray"
        android:layout_below="@+id/btImageUpload"
        android:layout_centerHorizontal="true" />

</RelativeLayout>